@model IEnumerable<jQueryAjaxCRUDinASPNETCore.Models.TransactionModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amonut)
            </th>
            <th><a onclick="showInPopup('@Url.Action("Create","Transaction",null,Context.Request.Scheme)','New Transaction')" class="btn btn-success text-white"> <i class="fas fa-random"></i> New Transaction</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeneficiaryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amonut)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","Transaction", new { id = item.TransactionId } ,Context.Request.Scheme)','Update Transaction')" class="btn btn-info text-white"> <i class="fas fa-pencil-alt"></i> Edit</a>
                    @*<a asp-action="Details" asp-route-id="@item.TransactionId">Details</a> |*@
                    <a onclick="showInPopup('@Url.Action("Delete","Transaction", new { id = item.TransactionId } ,Context.Request.Scheme)','Delete Transaction')" class="btn btn-danger text-white"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
